<p style="color: green"><%= notice %></p>

<h1>Departments</h1>

<div id="departments">
  <%= link_to "New department", new_department_path %>
  <table class="table table-striped table-hover">
    <thead class ="thead-dark">
    <tr>
      <th>#   </th>
      <th>Name   </th>
      <th>Address   </th>
      <th>Phone   </th>
      <th>Hospital   </th>
    </tr>

    </thead>

    <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.id %></td>
        <td><%= department.name %></td>
        <td><%= department.address %></td>
        <td><%= department.phone %></td>
        <td><%= link_to department.hospital.name, hospital_path(department.hospital_id) %></td>
        <td><%= link_to "Show this department", department %></td>
        <th cosplan="3"></th>
      </tr>
    <% end %>
    </tbody>


  </table>
  <%= paginate @departments %>
</div>


