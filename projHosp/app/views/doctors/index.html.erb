<p style="color: green"><%= notice %></p>

<h1>Doctors</h1>

<div id="doctors">
  <%= link_to "New doctor", new_doctor_path %>
  <table class="table table-striped table-hover">
    <thead class ="thead-dark">
    <tr>
      <th>#   </th>
      <th>Name   </th>
      <th>Email   </th>
      <th>Phone   </th>
      <th>Department   </th>
      <th>Speciality   </th>
    </tr>

    </thead>

    <tbody>
    <% @doctors.each do |doctors| %>
      <tr>
        <td><%= doctors.id %></td>
        <td><%= doctors.name %></td>
        <td><%= doctors.email %></td>
        <td><%= doctors.phone %></td>
        <td><%= link_to doctors.department.name, department_path(doctors.department_id) %></td>
        <td><%= link_to doctors.speciality.name, speciality_path(doctors.speciality_id) %></td>
        <td><%= link_to "Show this doctor", doctors %></td>
        <th cosplan="3"></th>
      </tr>
    <% end %>
    </tbody>


  </table>
  <%= paginate @doctors %>
</div>


