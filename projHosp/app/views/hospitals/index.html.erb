<p style="color: green"><%= notice %></p>

<h1>Hospitals</h1>

<div id="hospitals">
  <%= link_to "New hospital", new_hospital_path %>
  <table class="table table-striped table-hover">
    <thead class ="thead-dark">
    <tr>
      <th>#   </th>
      <th>Name   </th>
      <th>Address   </th>
      <th>Phone   </th>
      <th>Street   </th>
    </tr>

    </thead>

    <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.id %></td>
        <td><%= hospital.name %></td>
        <td><%= hospital.address %></td>
        <td><%= hospital.phone %></td>
        <td><%= hospital.street%></td>
        <td><%= link_to "Show this hospital", hospital %></td>
        <th cosplan="3"></th>
      </tr>
    <% end %>
    </tbody>


  </table>
  <%= paginate @hospitals %>
</div>


